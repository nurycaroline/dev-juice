{
  "name": "dev-helper",
  "displayName": "Dev Helper",
  "description": "Tools para desenvolvedores",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dev-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "dev-helper.generateCNPJ",
        "title": "Gerar CNPJ VÃ¡lido",
        "icon": "$(key)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dev-helper",
          "title": "Dev Helper",
          "icon": "$(tools)"
        }
      ]
    },
    "views": {
      "dev-helper": [
        {
          "id": "devHelperExplorer",
          "name": "Dev Tools",
          "icon": "$(tools)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dev-helper.generateCNPJ",
          "when": "view == devHelperExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "files": [
    "out/**/*",
    "src/templates/**/*"
  ],
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
