{
  "name": "dev-helper",
  "displayName": "Dev Helper",
  "description": "Tools para desenvolvedores",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dev-helper.base64Encoder",
        "title": "Codificador Base64",
        "icon": "$(lock)"
      },
      {
        "command": "dev-helper.colorConverter",
        "title": "Conversor de Cores",
        "icon": "$(color-mode)"
      },
      {
        "command": "dev-helper.dateCalculator",
        "title": "Calculadora de Data",
        "icon": "$(calendar)"
      },
      {
        "command": "dev-helper.emailValidator",
        "title": "Validador de Email",
        "icon": "$(mail)"
      },
      {
        "command": "dev-helper.formatJson",
        "title": "Formatador JSON",
        "icon": "$(json)"
      },
      {
        "command": "dev-helper.formatTextAlternatingCase",
        "title": "Dev Helper: Formatar para aLtErNaTiNg cAsE",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextCamelCase",
        "title": "Dev Helper: Formatar para camelCase",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextCapitalizedCase",
        "title": "Dev Helper: Formatar para Capitalized Case",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextInverseCase",
        "title": "Dev Helper: Formatar para InVeRsE CaSe",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextKebabCase",
        "title": "Dev Helper: Formatar para kebab-case",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextLowerCase",
        "title": "Dev Helper: Formatar para lower case",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextPascalCase",
        "title": "Dev Helper: Formatar para PascalCase",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextSentenceCase",
        "title": "Dev Helper: Formatar para Sentence case",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextSnakeCase",
        "title": "Dev Helper: Formatar para snake_case",
        "category": "Editor"
      },
      {
        "command": "dev-helper.formatTextUpperCase",
        "title": "Dev Helper: Formatar para UPPER CASE",
        "category": "Editor"
      },
      {
        "command": "dev-helper.generateCNPJ",
        "title": "Gerar CNPJ Válido",
        "icon": "$(key)"
      },
      {
        "command": "dev-helper.generateCPF",
        "title": "Gerar CPF Válido",
        "icon": "$(key)"
      },
      {
        "command": "dev-helper.generatePix",
        "title": "Gerar PIX QR Code",
        "icon": "$(credit-card)"
      },
      {
        "command": "dev-helper.generateUUID",
        "title": "Gerar UUID",
        "icon": "$(key)"
      },
      {
        "command": "dev-helper.hashGenerator",
        "title": "Gerador de Hash",
        "icon": "$(key)"
      },
      {
        "command": "dev-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "dev-helper.insertCNPJFormatted",
        "title": "Dev Helper: Inserir CNPJ Formatado",
        "category": "Editor"
      },
      {
        "command": "dev-helper.insertCNPJUnformatted",
        "title": "Dev Helper: Inserir CNPJ Não Formatado",
        "category": "Editor"
      },
      {
        "command": "dev-helper.insertCPFFormatted",
        "title": "Dev Helper: Inserir CPF Formatado",
        "category": "Editor"
      },
      {
        "command": "dev-helper.insertCPFUnformatted",
        "title": "Dev Helper: Inserir CPF Não Formatado",
        "category": "Editor"
      },
      {
        "command": "dev-helper.insertUUIDFormatted",
        "title": "Dev Helper: Inserir UUID Formatado",
        "category": "Editor"
      },
      {
        "command": "dev-helper.insertUUIDUnformatted",
        "title": "Dev Helper: Inserir UUID Não Formatado",
        "category": "Editor"
      },
      {
        "command": "dev-helper.passwordGenerator",
        "title": "Gerador de Senhas",
        "icon": "$(shield)"
      },
      {
        "command": "dev-helper.pixDecoder",
        "title": "PIX QR Code Decoder",
        "icon": "$(zap)"
      },
      {
        "command": "dev-helper.qrReader",
        "title": "QR Code Reader",
        "icon": "$(device-camera)"
      },
      {
        "command": "dev-helper.textFormatter",
        "title": "Formatação de Texto",
        "icon": "$(symbol-string)"
      },
      {
        "command": "dev-helper.urlEncoder",
        "title": "URL Encoder/Decoder",
        "icon": "$(link)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dev-helper",
          "title": "Dev Helper",
          "icon": "$(tools)"
        }
      ]
    },
    "views": {
      "dev-helper": [
        {
          "id": "devHelperExplorer",
          "name": "Dev Tools",
          "icon": "$(tools)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dev-helper.generateCNPJ",
          "when": "view == devHelperExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "test": "vscode-test"
  },
  "files": [
    "out/**/*",
    "src/templates/**/*"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "qrcode": "^1.5.4"
  }
}
